# Stellar Custody Smart Contract Environment Configuration
# Copy this file to .env and fill in the values

# ==================== DEPLOYMENT SECRETS ====================
# ⚠️ NEVER commit these to version control!

# Testnet deployer secret key
STELLAR_DEPLOYER_SECRET=""
# Example: STELLAR_DEPLOYER_SECRET="SXXX...XXXX"

# Mainnet deployer secret key (PRODUCTION ONLY)
STELLAR_MAINNET_SECRET=""
# Example: STELLAR_MAINNET_SECRET="SYYY...YYYY"

# ==================== NETWORK CONFIGURATION ====================

# Default network for development
STELLAR_NETWORK="testnet"
# Options: testnet, mainnet

# Horizon server URLs
STELLAR_TESTNET_HORIZON="https://horizon-testnet.stellar.org"
STELLAR_MAINNET_HORIZON="https://horizon.stellar.org"

# Soroban RPC server URLs
STELLAR_TESTNET_RPC="https://soroban-testnet.stellar.org"
STELLAR_MAINNET_RPC="https://soroban.stellar.org"

# ==================== CONTRACT CONFIGURATION ====================

# Contract addresses (filled automatically after deployment)
CONTRACT_ADDRESS_TESTNET=""
CONTRACT_ADDRESS_MAINNET=""

# System limits (can be overridden during initialization)
DEFAULT_DAILY_LIMIT="100000"
DEFAULT_MONTHLY_LIMIT="1000000"
DEFAULT_HIGH_VALUE_THRESHOLD="1000"
DEFAULT_REQUIRED_APPROVALS="2"
DEFAULT_COLD_PERCENTAGE="95"
DEFAULT_HOT_PERCENTAGE="5"

# ==================== GUARDIAN CONFIGURATION ====================

# Guardian addresses (PRODUCTION - use HSM-generated keys)
GUARDIAN_CEO_ADDRESS=""
GUARDIAN_CFO_ADDRESS=""
GUARDIAN_CTO_ADDRESS=""

# Guardian secrets (TESTNET ONLY - for testing)
GUARDIAN_CEO_SECRET=""
GUARDIAN_CFO_SECRET=""
GUARDIAN_CTO_SECRET=""

# ==================== WALLET CONFIGURATION ====================

# Production wallet addresses
HOT_WALLET_ADDRESS=""
COLD_WALLET_ADDRESS=""

# Wallet secrets (TESTNET ONLY - for testing)
HOT_WALLET_SECRET=""
COLD_WALLET_SECRET=""

# ==================== EXAMPLE VALUES ====================
# Uncomment and modify for testing

# Example testnet configuration
# STELLAR_DEPLOYER_SECRET="SCDXXX...TESTNET_SECRET"
# GUARDIAN_CEO_ADDRESS="GDXXX...TESTNET_ADDRESS"
# GUARDIAN_CFO_ADDRESS="GDYYY...TESTNET_ADDRESS" 
# GUARDIAN_CTO_ADDRESS="GDZZZ...TESTNET_ADDRESS"
# HOT_WALLET_ADDRESS="GDHHH...TESTNET_ADDRESS"
# COLD_WALLET_ADDRESS="GDCCC...TESTNET_ADDRESS"

# ==================== SECURITY NOTES ====================
# 
# IMPORTANT: Use HSM for mainnet guardian keys!
# Test thoroughly on testnet before mainnet deployment
# Never commit secrets to version control
